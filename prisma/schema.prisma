generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
  MODERATOR
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email       String        @id @unique
  password    String
  about_me    String?
  role        Role          @default(USER)
  is_enabled  Boolean
  name        String?
  createdAt   DateTime      @default(now())
  Image       Image[]
  isVerified  Boolean       @default(false)
  EmailAction EmailAction[]
  Rating      Rating[]
}

model Image {
  url        String   @id @unique
  title      String   @default("Default title")
  user       User     @relation(fields: [user_email], references: [email])
  user_email String
  createdAt  DateTime @default(now())
}

model EmailAction {
  id         Int      @id @default(autoincrement())
  userEmail  String
  action     String
  lastSentAt DateTime @default(now())

  user User @relation(fields: [userEmail], references: [email])

  @@unique([userEmail, action])
}

model Ingredients {
  id                  Int                   @id @default(autoincrement())
  name                String                @unique
  alcoholic           Boolean
  typeId              Int
  type                IngredientType        @relation(fields: [typeId], references: [id])
  percantage          Float?
  imageUrl            String
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  CocktailIngredients CocktailIngredients[]
}

model IngredientType {
  id          Int           @id @default(autoincrement())
  name        String        @unique
  Ingredients Ingredients[]
}

model Cocktails {
  id           Int              @id @default(autoincrement())
  name         String           @unique
  instructions String
  imageUrl     String
  categoryId   Int
  category     CocktailCategory @relation(fields: [categoryId], references: [id])
  glass        String
  createdAt    DateTime         @default(now())
  updatedAt    DateTime         @updatedAt

  CocktailIngredients CocktailIngredients[]
  Rating              Rating[]
}

model CocktailCategory {
  id        Int         @id @default(autoincrement())
  name      String      @unique
  Cocktails Cocktails[]
}

model Rating {
  id         Int    @id @default(autoincrement())
  userEmail  String
  cocktailId Int
  rating     Float

  user     User      @relation(fields: [userEmail], references: [email])
  cocktail Cocktails @relation(fields: [cocktailId], references: [id])

  @@unique([userEmail, cocktailId])
}

model CocktailIngredients {
  cocktailId   Int
  ingredientId Int

  cocktail   Cocktails   @relation(fields: [cocktailId], references: [id])
  ingredient Ingredients @relation(fields: [ingredientId], references: [id])

  amount Float
  unit   String
  note   String?

  @@id([cocktailId, ingredientId])
}
