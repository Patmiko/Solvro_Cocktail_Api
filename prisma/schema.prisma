generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
  MODERATOR
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email       String        @id @unique
  password    String
  about_me    String?
  role        Role          @default(USER)
  is_enabled  Boolean
  name        String?
  createdAt   DateTime      @default(now())
  Image       Image[]
  isVerified  Boolean       @default(false)
  EmailAction EmailAction[]
}

model Image {
  url        String   @id @unique
  title      String   @default("Default title")
  user       User     @relation(fields: [user_email], references: [email])
  user_email String
  createdAt  DateTime @default(now())
}

model EmailAction {
  id         Int      @id @default(autoincrement())
  userEmail  String
  action     String
  lastSentAt DateTime @default(now())

  user User @relation(fields: [userEmail], references: [email])

  @@unique([userEmail, action])
}

model Ingredients {
  id                  Int                   @id @default(autoincrement())
  name                String                @unique
  alcoholic           Boolean
  type                String
  percantage          Float
  imageUrl            String
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  CocktailIngredients CocktailIngredients[]
}

model Cocktails {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  instructions String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  imageUrl     String
  category     String
  glass        String
  rating       Float    @default(0)
  votes        Int      @default(0)

  CocktailIngredients CocktailIngredients[]
}

model CocktailIngredients {
  cocktailId   Int
  ingredientId Int

  cocktail   Cocktails   @relation(fields: [cocktailId], references: [id])
  ingredient Ingredients @relation(fields: [ingredientId], references: [id])

  @@id([cocktailId, ingredientId])
}
