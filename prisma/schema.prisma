generator client {
  provider = "prisma-client-js"
}

enum Role {
  ADMIN
  USER
  MODERATOR
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email       String        @id @unique
  password    String
  about_me    String?
  role        Role          @default(USER)
  isEnabled   Boolean
  name        String?
  createdAt   DateTime      @default(now())
  isVerified  Boolean       @default(false)
  EmailAction EmailAction[]
  Rating      Rating[]
}

model EmailAction {
  id         Int      @id @default(autoincrement())
  userEmail  String
  action     String
  lastSentAt DateTime @default(now())

  user User @relation(fields: [userEmail], references: [email])

  @@unique([userEmail, action])
}

model Ingredients {
  id                  Int                   @id @default(autoincrement())
  name                String                @unique
  description         String?
  alcoholic           Boolean
  typeName            String?
  type                IngredientType?       @relation(fields: [typeName], references: [name], onDelete: SetNull, onUpdate: Cascade)
  percentage          Float?
  imageUrl            String
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  CocktailIngredients CocktailIngredients[]
}

model IngredientType {
  name        String        @id @unique
  Ingredients Ingredients[]
}

model Cocktails {
  id           Int               @id @default(autoincrement())
  name         String            @unique
  instructions String
  imageUrl     String
  categoryName String?
  category     CocktailCategory? @relation(fields: [categoryName], references: [name], onDelete: SetNull, onUpdate: Cascade)
  glass        String
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  CocktailIngredients CocktailIngredients[]
  Rating              Rating[]
}

model CocktailCategory {
  name      String      @id @unique
  Cocktails Cocktails[]
}

model Rating {
  userEmail  String
  cocktailId Int
  rating     Float

  user     User      @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  cocktail Cocktails @relation(fields: [cocktailId], references: [id], onDelete: Cascade)

  @@id([userEmail, cocktailId])
}

model CocktailIngredients {
  cocktailId   Int
  ingredientId Int

  cocktail   Cocktails   @relation(fields: [cocktailId], references: [id], onDelete: Cascade)
  ingredient Ingredients @relation(fields: [ingredientId], references: [id], onDelete: Cascade)

  amount    String
  note      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([cocktailId, ingredientId])
}
